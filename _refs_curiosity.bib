  keywords = {Adaptation; Psychological,Cognition,Decision-making,Heuristics,Humans,Induction,Inferences,Models; Psychological,Psychological Theory,Rationality,Thinking,Uncertainity},
  file = {/Users/alexten/Zotero/storage/WIBKGVBI/Gigerenzer and Brighton - 2009 - Homo heuristicus why biased minds make better inf.pdf}
